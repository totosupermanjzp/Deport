@model Depot.Models.Name

@{
    ViewData["Title"] = "Edit";
}

<h2>编辑</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>货物</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ID" />
        <input type="hidden" asp-for="EnrollmentDate"/>
        <input type="hidden" asp-for="GoodsRFID"/>
        <input type="hidden" asp-for="price"/>
        <input type="hidden" asp-for="InterPerson"/>
        <input type="hidden" asp-for="Goods"/>
        <div class="form-group">
            <label asp-for="number" class="col-md-2 control-label">数量</label>
            <div class="col-md-10">
                <input asp-for="number" class="form-control" />
                <span asp-validation-for="number" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="location" class="col-md-2 control-label">送货地址</label>
            <div class="col-md-10">
                <input asp-for="location" class="cityinput" id="citySelect" />
                <span asp-validation-for="location" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
