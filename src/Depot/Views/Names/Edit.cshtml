@model Depot.Models.Name

@{
    ViewData["Title"] = "Edit";
}

<h2>编辑</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>货物</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="ID" />
        <div class="form-group">
            <label asp-for="EnrollmentDate" class="col-md-2 control-label">入库时间</label>
            <div class="col-md-10">
                <input asp-for="EnrollmentDate" class="form-control" />
                <span asp-validation-for="EnrollmentDate" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Goods" class="col-md-2 control-label">货物名</label>
            <div class="col-md-10">
                <input asp-for="Goods" class="form-control" />
                <span asp-validation-for="Goods" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="number" class="col-md-2 control-label">数量</label>
            <div class="col-md-10">
                <input asp-for="number" class="form-control" />
                <span asp-validation-for="number" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
